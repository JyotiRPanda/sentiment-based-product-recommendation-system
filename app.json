{
  "doctype": "html",
  "html": {
    "lang": "en",
    "head": {
      "title": "Capstone Project | Jyoti Panda",
      "links": [
        {
          "rel": "stylesheet",
          "href": "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css",
          "integrity": "sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3",
          "crossorigin": "anonymous"
        }
      ],
      "scripts": [
        {
          "src": "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js",
          "integrity": "sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p",
          "crossorigin": "anonymous"
        }
      ]
    },
    "body": {
      "div": {
        "class": "container",
        "children": [
          {
            "h1": "Product recommendation System"
          },
          {
            "div": {
              "class": "row",
              "children": [
                {
                  "div": {
                    "class": "col",
                    "form": {
                      "class": "row row-cols-lg-auto g-3 align-items-center",
                      "method": "POST",
                      "action": "/recommend",
                      "children": [
                        {
                          "div": {
                            "class": "col-12",
                            "label": {
                              "for": "User Name",
                              "class": "visually-hidden",
                              "text": "Username"
                            },
                            "input-group": {
                              "div": {
                                "class": "input-group-text",
                                "text": "User Name"
                              },
                              "input": {
                                "type": "text",
                                "class": "form-control",
                                "id": "User Name",
                                "name": "User Name",
                                "placeholder": "Username"
                              }
                            }
                          }
                        },
                        {
                          "div": {
                            "class": "col-12",
                            "button": {
                              "type": "submit",
                              "value": "recommend",
                              "class": "btn btn-primary",
                              "text": "Submit"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              ]
            }
          },
          {
            "span": {
              "style": "color:red;",
              "text": "Sample username, please enter one at a time :"
            }
          },
          {
            "kbd": ["rebecca", "joshua", "samantha", "dorothy w"]
          },
          {
            "div": {
              "class": "alert alert-success",
              "role": "alert",
              "text": "{{text}}"
            }
          },
          {
            "table": {
              "class": "table table-striped",
              "tbody": {
                "template": "for row in row_data",
                "tr": {
                  "template": "for col, row_ in zip(column_names, row)",
                  "td": "{{row_}}"
                }
              }
            }
          }
        ]
      }
    }
  }
}
